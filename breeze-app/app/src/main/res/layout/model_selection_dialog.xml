<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/modelSelectionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/model_selection_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/modelSelectionDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/model_selection_description"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/modelSelectionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/modelSizeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/modelSelectionDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/largeModelRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/large_model_option"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <RadioButton
            android:id="@+id/smallModelRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/small_model_option"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

    </RadioGroup>

    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/continue_button"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/modelSizeRadioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 